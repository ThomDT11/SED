<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".earth_game">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/bg_earth"></ImageView>


    <TextView
        android:id="@+id/earth_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/spacerangertitle"
        android:text="START"
        android:textColor="@android:color/holo_orange_dark"
        android:textSize="40dp"></TextView>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="60dp"
        android:fontFamily="@font/big_space_demo"
        android:text="Stage-I"
        android:textColor="#FF9800"
        android:textColorLink="#FF5722"
        android:textSize="40dp"></TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp"
        android:fontFamily="@font/big_space_demo"
        android:text="Planet I"
        android:textColor="#FF9800"
        android:textColorLink="#FF5722"
        android:textSize="70dp"></TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="High Score:"
        android:id="@+id/highScoreText"
        android:fontFamily="@font/big_space_demo"
        android:textColor="#FF9800"
        android:textSize="25dp"
        ></TextView>
</RelativeLayout>