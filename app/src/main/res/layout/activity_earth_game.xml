<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".earth_game">


    <ImageView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scaleType="centerCrop"
    android:src="@drawable/bg_earth"></ImageView>


    <ImageButton
        android:id="@+id/home_button_setting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="289dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="-9dp"
        android:layout_marginBottom="285dp"
        android:background="@android:color/transparent"
        android:scaleType="center"
        android:src="@drawable/home_button"></ImageButton>

    <TextView
        android:id="@+id/earth_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="119dp"
        android:fontFamily="@font/spacerangertitle"
        android:text="START"
        android:textColor="@android:color/holo_orange_dark"
        android:textSize="40dp"></TextView>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="156dp"
        android:fontFamily="@font/big_space_demo"
        android:text="Stage-I"
        android:textColor="#FF9800"
        android:textColorLink="#FF5722"
        android:textSize="40dp"></TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="86dp"
        android:fontFamily="@font/big_space_demo"
        android:text="PLANET OF TRANQUILITY"
        android:textColor="#FF9800"
        android:textColorLink="#FF5722"
        android:textSize="70dp"></TextView>

</RelativeLayout>